# $Id$

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VPATH		= @srcdir@

SHELL		= /bin/sh

CC = @CC@
AR = ar
RANLIB = @RANLIB@
DEFS = @DEFS@
CFLAGS = @CFLAGS@

prefix = @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib

SOURCES=auth.c encrypt.c genget.c enc_des.c misc.c kerberos.c read_password.c

OBJECTS=auth.o encrypt.o genget.o enc_des.o misc.o kerberos.o read_password.o

all: libtelnet.a

libtop = @libtop@

.c.o:
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $(DEFS) \
	@KRBINCPATH@ -I.. -I$(srcdir)/.. $<

libtelnet.a: $(OBJECTS)
	$(AR) cr libtelnet.a $(OBJECTS)
	$(RANLIB) libtelnet.a

install:
	@true

clean cleandir:
	rm -f *.o *.a \#* *~ core

distclean: clean
	rm -f Makefile *~
	rm -rf CVS
