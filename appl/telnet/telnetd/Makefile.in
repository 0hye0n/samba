# Makefile.in,v 1.2 1994/05/13 05:02:46 assar Exp

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VPATH		= @srcdir@

SHELL		= /bin/sh

CC = @CC@
AR = ar
RANLIB = @RANLIB@
DEFS = @DEFS@
CFLAGS = @CFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@
MKDIRHIER = @top_srcdir@/../../mkdirhier-sh

prefix = @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib

PROGS = telnetd

SOURCES=telnetd.c state.c termstat.c slc.c sys_term.c \
	utility.c global.c authenc.c


OBJECTS=telnetd.o state.o termstat.o slc.o sys_term.o \
	utility.o global.o authenc.o


libtop = @libtop@

KRBLIBPATH	= @KRBLIBPATH@
KRBINCPATH	= @KRBINCPATH@
LIBKRB		= @LIBKRB@
LIBDES		= @LIBDES@
LIBKAFS		= @LIBKAFS@
LIBCOM_ERR	= @LIBCOM_ERR@

KLIB=$(KRBLIBPATH) $(LIBKAFS) $(LIBKRB) $(LIBDES) $(LIBCOM_ERR) 


all: telnetd

$(OBJECTS): ../config.h

.c.o:
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $(DEFS) \
	@KRBINCPATH@ -I.. -I$(srcdir)/.. -I. -I$(srcdir) $<

telnetd: $(OBJECTS)
	$(CC) -o telnetd $(OBJECTS) $(LIBS) ../libtelnet/libtelnet.a $(KLIB)

install: all
	$(MKDIRHIER) $(prefix)/libexec
	for x in $(PROGS); do $(INSTALL) $$x $(prefix)/libexec; done

clean cleandir:
	rm -f *.o *.a telnetd \#* *~ core

distclean: clean
	rm -f Makefile *~
	rm -rf CVS

