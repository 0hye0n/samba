# Makefile.in,v 1.2 1994/05/13 05:02:46 assar Exp

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VPATH		= @srcdir@

SHELL		= /bin/sh

CC = @CC@
AR = ar
RANLIB = @RANLIB@
DEFS = @DEFS@ -DBINDIR='"$(bindir)"'
CFLAGS = @CFLAGS@
LD_FLAGS = @LD_FLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@
MKDIRHIER = @top_srcdir@/mkdirhier-sh

prefix = @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib
bindir = $(exec_prefix)/bin

PROGS = telnetd

SOURCES=telnetd.c state.c termstat.c slc.c sys_term.c \
	utility.c global.c authenc.c


OBJECTS=telnetd.o state.o termstat.o slc.o sys_term.o \
	utility.o global.o authenc.o


libtop = @libtop@

LIBKRB		= -L../../../lib/krb -lkrb
LIBDES		= -L../../../lib/des -ldes
LIBKAFS		= -L../../../lib/kafs -lkafs
LIBROKEN	= -L../../../lib/roken -lroken

KLIB=$(LIBKAFS) $(LIBKRB) $(LIBDES) $(LIBROKEN)


all: telnetd

.c.o:
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $(DEFS) \
	-I../../../include -I.. -I../../.. -I$(srcdir)/.. -I. -I$(srcdir) $<

telnetd: $(OBJECTS)
	$(CC) $(LD_FLAGS) $(LDFLAGS) -o telnetd $(OBJECTS) ../libtelnet/libtelnet.a $(KLIB) $(LIBS)

install: all
	$(MKDIRHIER) $(prefix)/libexec
	for x in $(PROGS); do $(INSTALL) $$x $(prefix)/libexec; done

clean cleandir:
	rm -f *.o *.a telnetd \#* *~ core

distclean: clean
	rm -f Makefile *~
	rm -rf CVS

