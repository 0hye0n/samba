# $Id$

SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

topdir = ../..

XINCS = @X_CFLAGS@
XLIBS = @X_LIBS@ -lXt @X_PRE_LIBS@ -lX11 @X_EXTRA_LIBS@

CC = @CC@
RANLIB = @RANLIB@
DEFS = @DEFS@ -DBINDIR='"$(bindir)"'
CFLAGS = $(XINCS) @CFLAGS@
LD_FLAGS = @LD_FLAGS@
LIBS = $(XLIBS) @LIBS@
INSTALL = @INSTALL@
INSTALL_DATA = $(INSTALL)
INSTALL_PROGRAM = @INSTALL_PROGRAM@
MKINSTALLDIRS = @top_srcdir@/mkinstalldirs

prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@
bindir = @bindir@
mandir = @mandir@
transform=@program_transform_name@

X_PROGS_BIN = xnlock

PROG_BIN	= @MAKE_X_PROGS_BIN@
PROG_LIBEXEC	= 
PROGS = $(PROG_BIN) $(PROG_LIBEXEC)

MAN1 = xnlock.man

SOURCES = xnlock.c

OBJECTS = xnlock.o

all: $(PROGS)

Wall:
	make CFLAGS="$(XINCS) -g -Wall -Wno-comment -Wmissing-prototypes -Wmissing-declarations -D__USE_FIXED_PROTOTYPES__"

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) -I../.. -I../../include -I$(srcdir) $(CFLAGS) $<

install: all
	$(MKINSTALLDIRS) $(bindir)
	for x in $(PROG_BIN); do \
	  $(INSTALL_PROGRAM) $$x $(bindir)/`echo $$x | sed '$(transform)'`; \
	done
	$(MKINSTALLDIRS) $(mandir)/man1
	(cd $(srcdir); \
	for x in $(MAN1); do \
	  $(INSTALL_DATA) $$x $(mandir)/man1/`echo $$x | sed '$(transform)' | sed 's/\.man/.1/'`; \
	done)

uninstall:
	for x in $(PROG_BIN); do \
	  rm -f $(bindir)/`echo $$x | sed '$(transform)'`; \
	done
	for x in $(MAN1); do \
	  rm -f $(mandir)/man1/`echo $$x | sed '$(transform)' | sed 's/\.man/.1/'`; \
	done

TAGS: $(SOURCES)
	etags $(SOURCES)

check:

clean:
	rm -f *.a *.o $(PROGS)

mostlyclean: clean

distclean: clean
	rm -f Makefile *.tab.c *~

realclean: distclean
	rm -f TAGS

dist: $(DISTFILES)
	for file in $(DISTFILES); do \
	  ln $$file ../`cat ../.fname`/lib \
	    || cp -p $$file ../`cat ../.fname`/lib; \
	done

KLIB=-L../../lib/krb -lkrb -L../../lib/des -ldes
LIBROKEN=-L../../lib/roken -lroken

xnlock: xnlock.o
	$(CC) $(LD_FLAGS) $(LDFLAGS) -o $@ xnlock.o @KRB_KAFS_LIB@ $(KLIB) $(LIBROKEN) $(LIBS) $(LIBROKEN)

$(OBJECTS): ../../config.h
