# 

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VPATH		= @srcdir@

SHELL		= /bin/sh

CC 	= @CC@
RANLIB 	= @RANLIB@
DEFS 	= @DEFS@
CFLAGS 	= @CFLAGS@

INSTALL = @INSTALL@

prefix 	= @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib

ATHENA = /usr/athena

ftpd_OBJS = ftpd.o ftpcmd.o logwtmp.o popen.o auth.o krb4.o kauth.o

all: ftpd

.c.o:
	$(CC) -c $(CFLAGS) -I. -I$(srcdir) -I.. -I$(srcdir)/.. -I../common -I$(srcdir)/../common -I$(ATHENA)/include  $(DEFS) $<

install:


ftpd: $(ftpd_OBJS) ../common/libcommon.a
	$(CC) -o ftpd $(ftpd_OBJS) ../common/libcommon.a -L$(ATHENA)/lib -lkafs -lkrb -ldes

ftpcmd.c: ftpcmd.y
	$(YACC) $(YFLAGS) $<
	chmod a-w y.tab.c
	mv -f y.tab.c ftpcmd.c

clean cleandir:
	rm -f *~ *.o core ftpd ftpcmd.c \#*

distclean: 
	rm -f Makefile
	rm -rf CVS
