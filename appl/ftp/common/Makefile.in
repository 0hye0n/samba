# $Id$

SHELL		= /bin/sh

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VPATH		= @srcdir@

CC 	= @CC@
AR	= ar
RANLIB 	= @RANLIB@
DEFS 	= @DEFS@
CFLAGS 	= @CFLAGS@

INSTALL = @INSTALL@

prefix 	= @prefix@

SOURCES = base64.c glob.c
OBJECTS = $(libcommon_OBJS)

libcommon_OBJS = base64.o glob.o

LIBNAME = $(LIBPREFIX)common
LIBEXT = a
LIBPREFIX = @LIBPREFIX@
LIB = $(LIBNAME).$(LIBEXT)

all: $(LIB)

.c.o:
	$(CC) -c $(CFLAGS) -I$(srcdir) -I../../../include $(DEFS) $<

$(LIB): $(libcommon_OBJS)
	rm -f $@
	ar cr $@ $(libcommon_OBJS)
	-$(RANLIB) $@

install:

uninstall:

TAGS: $(SOURCES)
	etags $(SOURCES)

clean cleandir:
	rm -f *~ *.o libcommon.a core \#*

distclean: 
	rm -f Makefile

$(OBJECTS): ../../../include/config.h
