# $Id$

SHELL		= /bin/sh

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VPATH		= @srcdir@

CC 	= @CC@
AR	= ar
RANLIB 	= @RANLIB@
DEFS 	= @DEFS@
CFLAGS 	= @CFLAGS@

INSTALL = @INSTALL@

prefix 	= @prefix@

SOURCES = base64.c glob.c
OBJECTS = $(libcommon_OBJS)

libcommon_OBJS = base64.o glob.o

all: libcommon.a

.c.o:
	$(CC) -c $(CFLAGS) -I$(srcdir) -I../../../include -I../../.. $(DEFS) $<

libcommon.a: $(libcommon_OBJS)
	ar cr libcommon.a $(libcommon_OBJS)
	$(RANLIB) libcommon.a

install:

TAGS: $(SOURCES)
	etags $(SOURCES)

clean cleandir:
	rm -f *~ *.o libcommon.a core \#*

distclean: 
	rm -f Makefile

$(OBJECTS): ../../../config.h
