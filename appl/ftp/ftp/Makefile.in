srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VPATH		= @srcdir@

SHELL		= /bin/sh

CC 	= @CC@
RANLIB 	= @RANLIB@
DEFS 	= @DEFS@
CFLAGS 	= @CFLAGS@
LD_FLAGS = @LD_FLAGS@
LIBS = @LIBS@
MKDIRHIER = @top_srcdir@/mkdirhier-sh

INSTALL = @INSTALL@

prefix 	= @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib

ATHENA = ../../..

INCTOP = $(ATHENA)/include

LIBTOP = $(ATHENA)/lib

PROGS = ftp

ftp_OBJS = cmds.o cmdtab.o ftp.o krb4.o main.o ruserpass.o domacro.o globals.o kauth.o

all: ftp

.c.o:
	$(CC) -c $(CFLAGS) -I$(srcdir) -I.. -I$(srcdir)/../common -I$(INCTOP) $(DEFS) $<

install: all
	$(MKDIRHIER) $(prefix)/bin
	for x in $(PROGS); do $(INSTALL) $$x $(prefix)/bin; done

ftp: $(ftp_OBJS) ../common/libcommon.a
	$(CC) $(LD_FLAGS) $(LDFLAGS) -o ftp $(ftp_OBJS) ../common/libcommon.a -L$(LIBTOP)/krb -lkrb -L$(LIBTOP)/des -ldes -L$(LIBTOP)/roken -lroken $(LIBS)

clean cleandir:
	rm -f *~ *.o core ftp \#*

distclean: 
	rm -f Makefile
	rm -rf CVS
