#!/bin/sh
# $Id$
if test $# -lt 1; then
  echo "Usage: $0 host [arguments to xterm]"
  exit 1
fi
host=$1
shift
xterm_args=$*
bindir=%bindir%
PATH=$PATH:$bindir
set -- `kx $host`
if test $# -ne 3; then
  exit 1
fi
pid=$1
disp=:$2
auth=$3
kill -USR1 $pid
rsh -n $host "env DISPLAY=$disp XAUTHORITY=$auth xterm -T $host -n $host $xterm_args &"
