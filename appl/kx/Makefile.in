# $Id$

SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

XINCS = @X_CFLAGS@
XLIBS = @X_LIBS@ @LIB_XauReadAuth@ @X_PRE_LIBS@ @X_EXTRA_LIBS@

CC = @CC@
AR = ar
DEFS = @DEFS@
CFLAGS = $(XINCS) @CFLAGS@
LD_FLAGS = @LD_FLAGS@
INSTALL = @INSTALL@
LIBS = $(XLIBS) @LIBS@
MKINSTALLDIRS = @top_srcdir@/mkinstalldirs

prefix = @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib
libexecdir = $(exec_prefix)/libexec
bindir = $(exec_prefix)/bin

X_PROGS_BIN = kx rxterm rxtelnet
X_PROGS_LIBEXEC = kxd

PROG_BIN	= @MAKE_X_PROGS_BIN@
PROG_LIBEXEC	= @MAKE_X_PROGS_LIBEXEC@
PROGS = $(PROG_BIN) $(PROG_LIBEXEC)

SOURCES_KX     = kx.c @XauWriteAuth_c@
SOURCES_KXD    = kxd.c @XauWriteAuth_c@
SOURCES_COMMON = common.c

OBJECTS_KX     = kx.o common.o @XauWriteAuth_o@
OBJECTS_KXD    = kxd.o common.o @XauWriteAuth_o@

OBJECTS = $(OBJECTS_KX) $(OBJECTS_KXD)
SOURCES = $(SOURCES_KX) $(SOURCES_KXD) $(SOURCES_COMMON)

all: $(PROGS)

Wall:
	make CFLAGS="-g -Wall -Wno-comment -Wmissing-prototypes -Wmissing-declarations -D__USE_FIXED_PROTOTYPES__"

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) -I../.. -I../../include -I$(srcdir) $(CFLAGS) $<

install: all
	$(MKINSTALLDIRS) $(bindir)
	for x in $(PROG_BIN); do $(INSTALL) $$x $(bindir); done
	for x in $(PROG_LIBEXEC); do $(INSTALL) $$x $(libexecdir); done

uninstall:

TAGS: $(SOURCES)
	etags $(SOURCES)

check:

clean:
	rm -f *.a *.o $(PROGS)

mostlyclean: clean

distclean: clean
	rm -f Makefile *.tab.c *~

realclean: distclean
	rm -f TAGS

dist: $(DISTFILES)
	for file in $(DISTFILES); do \
	  ln $$file ../`cat ../.fname`/lib \
	    || cp -p $$file ../`cat ../.fname`/lib; \
	done

KLIB= -L../../lib/krb -lkrb -L../../lib/des -ldes -L../../lib/roken -lroken

kx: $(OBJECTS_KX)
	$(CC) $(LD_FLAGS) $(LDFLAGS) -o $@ $(OBJECTS_KX) $(KLIB) $(LIBS)

kxd: $(OBJECTS_KXD)
	$(CC) $(LD_FLAGS) $(LDFLAGS) -o $@ $(OBJECTS_KXD) $(KLIB) $(LIBS)

rxterm: rxterm.in
	sed -e "s!%bindir%!$(bindir)!" $(srcdir)/rxterm.in > $@
	chmod +x $@

rxtelnet: rxtelnet.in
	sed -e "s!%bindir%!$(bindir)!" $(srcdir)/rxtelnet.in > $@
	chmod +x $@

$(OBJECTS): ../../config.h
