#!/bin/sh
# $Id$
#
usage="Usage: $0 [-l username] [-k] [-t args_to_telnet] [-x args_to_xterm] host [port]"
while true
do
  case $1 in
  -l) telnet_args="${telnet_args} -l $2 "; kx_args="${kx_args} -l $2"; title="${2}@"; shift 2;;
  -t) telnet_args="${telnet_args} $2 "; shift 2;;
  -x) xterm_args="${xterm_args} $2 "; shift 2;;
  -k) kx_args="${kx_args} -k"; shift;;
  -*) echo "$0: Bad option $1"; echo $usage; exit 1;;
  *) break;;
  esac
done
if test $# -lt 1; then
  echo $usage
  exit 1
fi
host=$1
port=$2
title="${title}${host}"
bindir=%bindir%
pdc_trams=`dirname $0`
PATH=$pdc_trams:$bindir:$PATH
export PATH
set -- `kx $kx_args $host`
if test $# -ne 3; then
  exit 1
fi
screen=`echo $DISPLAY | sed -ne 's/[^:]*:[0-9]*\(\.[0-9]*\)/\1/p'`
pid=$1
disp=${2}${screen}
auth=$3
term=
oldifs=$IFS
IFS=:
set -- $PATH
IFS=$oldifs
for i in $*; do
  test -n "$i" || i="."
  for j in xterm aixterm dxterm hpterm; do
    if test -x $i/$j; then
      term=$j; break 2
    fi
  done
done
if test -n "$term"; then
  ($term -title $title -name $title $xterm_args -e env DISPLAY=$disp XAUTHORITY=$auth telnet -D $telnet_args $host $port; kill -USR2 $pid) &
else
  env DISPLAY=$disp XAUTHORITY=$auth telnet -D $telnet_args $host $port
  kill -USR2 $pid
fi
