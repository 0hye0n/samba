#!/bin/sh
# $Id$
if test $# -ne 1; then
  echo "Usage: $0 host"
  exit 1
fi
host=$1
bindir=%bindir%
PATH=$PATH:$bindir set -- `kx $host`
if test $# -ne 3; then
  exit 1
fi
pid=$1
disp=:$2
auth=$3
(xterm -T $host -n $host -e env DISPLAY=$disp XAUTHORITY=$auth $bindir/telnet -D $host ; kill -USR2 $pid) &
