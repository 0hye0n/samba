import samba.param as param, ldb, sys, getopt

optlist, args = getopt.getopt(sys.argv[1:], "s:")

conf = param.LoadParm()
loaded = False

for o, v in optlist:
    if o == "-s":
        if not conf.load(v):
            raise(v + " not found")
        loaded = True

if not loaded:
    conf.load_default()

secrets = ldb.Ldb()
secrets.connect(conf.get("private dir") + "/secrets.ldb")

search = "(&(objectclass=primaryDomain)(samaccountname=" + \
	conf.get("netbios name") + "$))"

msg = secrets.search(expression=search, attrs=['secret'])
print(msg[0]['secret'][0])
