
SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
AR = ar
RANLIB = @RANLIB@
DEFS = @DEFS@
CFLAGS = @CFLAGS@

INSTALL = @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@

AIX_SYSCALL_MAGIC=@AIX_SYSCALL_MAGIC@

prefix = @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib

LIB = libkafs.a

SOURCES = afssys.c

OBJECTS = afssys.o

all: $(LIB)

Wall:
	make CFLAGS="-g -Wall -Wmissing-prototypes -Wmissing-declarations -D__USE_FIXED_PROTOTYPES__"

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) -I../.. -I../../include -I$(srcdir) -I$(srcdir)/../../include $(CFLAGS) $<

install: all
	$(INSTALL) -d $(libdir)
	$(INSTALL_DATA) $(LIB) $(libdir)
	-$(RANLIB) $(libdir)/$(LIB)

uninstall:

TAGS: $(SOURCES)
	etags $(SOURCES)

check:

clean:
	rm -f *.a *.o

mostlyclean: clean

distclean: clean
	rm -f Makefile *.tab.c

realclean: distclean
	rm -f TAGS

dist: $(DISTFILES)
	for file in $(DISTFILES); do \
	  ln $$file ../`cat ../.fname`/lib \
	    || cp -p $$file ../`cat ../.fname`/lib; \
	done

$(LIB): $(OBJECTS)
	rm -f $@
	$(AR) cr $@ $(OBJECTS)
	if [ "$(AIX_SYSCALL_MAGIC)" = yes ] ; then $(AR) cr $@ $(srcdir)/afsl.exp ; fi
	-$(RANLIB) $@

$(OBJECTS): ../../config.h
