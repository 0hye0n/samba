SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
AR = ar
RANLIB = @RANLIB@
DEFS = @DEFS@ -DLIBDIR='"$(libdir)"'
CFLAGS = @CFLAGS@

INSTALL = @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
MKDIRHIER = @top_srcdir@/mkdirhier-sh

prefix = @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib

PICFLAGS = @PICFLAGS@
 
LIBNAME = libkafs
LIBEXT = @LIBEXT@
SHLIBEXT = @SHLIBEXT@
AFS_EXTRA_LIBS	= @AFS_EXTRA_LIBS@
LIB = $(LIBNAME).$(LIBEXT) $(AFS_EXTRA_LIBS)

SOURCES = afssys.c afslib.c

OBJECTS = afssys.o

all: $(LIB)

Wall:
	make CFLAGS="-g -Wall -Wmissing-prototypes -Wmissing-declarations -D__USE_FIXED_PROTOTYPES__"

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) -I../.. -I../../include -I$(srcdir) -I$(srcdir)/../../include $(CFLAGS) $(PICFLAGS) $<

install: all
	$(MKDIRHIER) $(libdir)
	$(INSTALL) -m 0555 $(LIB) $(libdir)

uninstall:

TAGS: $(SOURCES)
	etags $(SOURCES)

check:

clean:
	rm -f $(LIB) *.o *.a

mostlyclean: clean

distclean: clean
	rm -f Makefile *.tab.c *~
	rm -rf CVS

realclean: distclean
	rm -f TAGS

dist: $(DISTFILES)
	for file in $(DISTFILES); do \
	  ln $$file ../`cat ../.fname`/lib \
	    || cp -p $$file ../`cat ../.fname`/lib; \
	done

$(LIBNAME).a: $(OBJECTS) @AFS_EXTRA_OBJS@
	rm -f $@
	$(AR) cr $@ $(OBJECTS) @AFS_EXTRA_OBJS@
	-$(RANLIB) $@


$(LIBNAME).$(SHLIBEXT): $(OBJECTS)
	rm -f $@
	$(CC) $(CFLAGS) $(PICFLAGS) -shared -o $@ $(OBJECTS)

$(AFS_EXTRA_LIBS): afslib.o
	$(CC) -o $@ -bM:SRE -bI:$(srcdir)/afsl.exp -bE:$(srcdir)/afslib.exp -bnoentry afslib.o

$(OBJECTS): ../../config.h
