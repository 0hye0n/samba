#
# $Header$
#

SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
AR = ar
RANLIB = @RANLIB@
DEFS = @DEFS@
CFLAGS = @CFLAGS@

INSTALL = @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
MKDIRHIER = @top_srcdir@/mkdirhier-sh

AIX_SYSCALL_MAGIC=@AIX_SYSCALL_MAGIC@

prefix = @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib

PICFLAGS = @PICFLAGS@
 
LIBNAME = libkafs
LIBEXT = @LIBEXT@
SHLIBEXT = @SHLIBEXT@
LIB = $(LIBNAME).$(LIBEXT)

SOURCES = afssys.c

OBJECTS = afssys.o

all: $(LIB)

Wall:
	make CFLAGS="-g -Wall -Wmissing-prototypes -Wmissing-declarations -D__USE_FIXED_PROTOTYPES__"

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) -I../.. -I../../include -I$(srcdir) -I$(srcdir)/../../include $(CFLAGS) $(PICFLAGS) $<

install: all
	$(MKDIRHIER) $(libdir)
	$(INSTALL_DATA) $(LIB) $(libdir)

uninstall:

TAGS: $(SOURCES)
	etags $(SOURCES)

check:

clean:
	rm -f $(LIB) *.o *.a

mostlyclean: clean

distclean: clean
	rm -f Makefile *.tab.c

realclean: distclean
	rm -f TAGS

dist: $(DISTFILES)
	for file in $(DISTFILES); do \
	  ln $$file ../`cat ../.fname`/lib \
	    || cp -p $$file ../`cat ../.fname`/lib; \
	done

$(LIBNAME).a: $(OBJECTS)
	rm -f $@
	$(AR) cr $@ $(OBJECTS)
	-if [ "$(AIX_SYSCALL_MAGIC)" = yes ] ; then $(AR) cr $@ $(srcdir)/afsl.exp ; fi
	-$(RANLIB) $@

$(LIBNAME).$(SHLIBEXT): $(OBJECTS)
	rm -f $@
	$(CC) $(CFLAGS) $(PICFLAGS) -shared -o $@ $(OBJECTS)

$(OBJECTS): ../../config.h
