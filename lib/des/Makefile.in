#
# $Header$
#

SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
AR = ar
RANLIB = @RANLIB@
DEFS = @DEFS@
CFLAGS = @CFLAGS@

PICFLAGS = @PICFLAGS@

INSTALL = @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
MKDIRHIER = @top_srcdir@/mkdirhier-sh

prefix = @prefix@
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib

PICFLAGS = @PICFLAGS@
 
LIBNAME = libdes
LIBEXT = @LIBEXT@
SHLIBEXT = @SHLIBEXT@
LIB = $(LIBNAME).$(LIBEXT)

SOURCES = cfb_enc.c \
          cbc_enc.c \
          fcrypt.c \
          key_par.c \
          ofb_enc.c \
          pcbc_enc.c \
          qud_cksm.c \
          read_pwd.c \
          rnd_keys.c \
          str2key.c \
          cbc_cksm.c \
          ecb_enc.c \
          set_key.c

OBJECTS = cfb_enc.o \
          cbc_enc.o \
          fcrypt.o \
          key_par.o \
          ofb_enc.o \
          pcbc_enc.o \
          qud_cksm.o \
          read_pwd.o \
          rnd_keys.o \
          str2key.o \
          cbc_cksm.o \
          ecb_enc.o \
          set_key.o

all: $(LIB)

Wall:
	make CFLAGS="-g -Wall -Wmissing-prototypes -Wmissing-declarations -D__USE_FIXED_PROTOTYPES__"

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) -I../.. -I../../include -I$(srcdir) -I$(srcdir)/../../include $(CFLAGS) $(PICFLAGS) $<

install: all
	$(MKDIRHIER) $(prefix)/lib
	$(INSTALL_DATA) $(LIB) $(libdir)

uninstall:

TAGS: $(SOURCES)
	etags $(SOURCES)

check:

clean:
	rm -f $(LIB) *.o *.a

mostlyclean: clean

distclean: clean
	rm -f Makefile *.tab.c *~
	rm -rf CVS

realclean: distclean
	rm -f TAGS

dist: $(DISTFILES)
	for file in $(DISTFILES); do \
	  ln $$file ../`cat ../.fname`/lib \
	    || cp -p $$file ../`cat ../.fname`/lib; \
	done

$(LIBNAME).a: $(OBJECTS)
	rm -f $@
	$(AR) cr $@ $(OBJECTS)
	-$(RANLIB) $@

$(LIBNAME).$(SHLIBEXT): $(OBJECTS)
	rm -f $@
	$(CC) $(CFLAGS) $(PICFLAGS) -shared -o $@ $(OBJECTS)

$(OBJECTS): ../../config.h
