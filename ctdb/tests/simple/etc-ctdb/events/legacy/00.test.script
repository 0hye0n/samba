#!/bin/sh
# event script for 'make test'

. "${CTDB_BASE}/functions"

ctdb_check_args "$@"

event="$1"
shift

case "$event" in
     startup)
	IFACES=`ctdb ifaces -X | grep -v '^|Name|LinkStatus|References|'`
	for I in $IFACES; do
		IFACE=`echo -n "$I" | cut -d '|' -f2`
		ctdb setifacelink $IFACE up
	done
	;;
esac

echo "${event} event${*:+ for }$*"
