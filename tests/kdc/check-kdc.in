srcdir="@srcdir@"
objdir="@objdir@"

R=EXAMPLE.ORG

port=8888

kadmin="../../kadmin/kadmin -l -r $R"
kdc="../../kdc/kdc --addresses=localhost -P $port"
cache="FILE:${objdir}/client-cache"
kinit="../../kuser/kinit -c $cache --no-afslog"
klist="../../kuser/klist -c $cache"
kgetcred="../../kuser/kgetcred -c $cache"

KRB5_CONFIG="${objdir}/krb5.conf"
export KRB5_CONFIG

rm -f current-db*
rm -f out-*
rm -f mkey.file*

echo Creating database
${kadmin} \
    init \
    --realm-max-ticket-life=1day \
    --realm-max-renewable-life=1month \
    ${R} || exit 1

${kadmin} add -p foo --use-defaults foo@${R} || exit 1
${kadmin} add -p bar --use-defaults bar@${R} || exit 1
${kadmin} add -p kaka --use-defaults host/datan.example.com@${R} || exit 1

echo foo > ${objdir}/foopassword

echo Starting kdc
${kdc} &
kdcpid=$!
sleep 2

exitcode=0

echo "Getting initial tickets"
${kinit} --password-file=${objdir}/foopassword foo@$R || exitcode=1
echo "Getting tickets"
${kgetcred} host/datan.example.com@${R} || exitcode=1
echo "Listing tickets"
${klist} > /dev/null || exitcode=1

echo "killing kdc (${kdcpid})"
kill $kdcpid || exit 1

exit $exitcode

