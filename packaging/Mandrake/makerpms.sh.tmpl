SPECDIR=/usr/src/RPM/SPECS
SRCDIR=/usr/src/RPM/SOURCES
USERID=`id -u`
GRPID=`id -g`

( cd ../../.. ; chown -R ${USERID}.${GRPID} ${SRCDIR}/samba )
( cd ../../.. ; tar czvf ${SRCDIR}/samba-PVERSION.tar.gz samba )
